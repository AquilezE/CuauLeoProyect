<UserControl x:Class="Cliente.Pantallas.Friends"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="http://schemas.hpod9.com/haley/mvvm"
             mc:Ignorable="d"
             d:DesignHeight="850" d:DesignWidth="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="60*" />
            <ColumnDefinition Width="30*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <Label Grid.Column="1" Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="50" Content="{h:Lang lblManageFriends}" />
        <Button Grid.Column="1" Grid.Row="1" MinWidth="20" MinHeight="120" Margin="5 5 5 5"
                Content="{h:Lang btnFriendList}" FontSize="40" Click="btFriendsList_Click" />
        <Button Grid.Column="1" Grid.Row="2" MinWidth="20" MinHeight="120" Margin="5 5 5 5"
                Content="{h:Lang btnFriendRequest}" FontSize="40"
                Click="btFriendRequests_Click" />
        <Button Grid.Column="1" Grid.Row="3" MinWidth="20" MinHeight="120" Margin="5 5 5 5"
                Content="{h:Lang btnAddFriend}" FontSize="40" Click="btAddFriend_Click" />
        <Button Grid.Column="1" Grid.Row="4" MinWidth="20" MinHeight="120" Margin="5 5 5 5"
                Content="{h:Lang btnBlockLists}" FontSize="40" Click="btBlockList_Click" />
        <Button Grid.Column="1" Grid.Row="5" Width="200" Height="60" Margin="15 5 5 15" Content="{h:Lang btnGoBack}"
                FontSize="25" Click="btGoBack_Click" />
    </Grid>
</UserControl>
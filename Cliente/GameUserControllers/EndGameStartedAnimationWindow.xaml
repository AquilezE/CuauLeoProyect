<Window x:Class="Cliente.GameUserControllers.EndGameStartedAnimationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="EndGameStartedAnimationWindow" Height="350" Width="525"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid>
        <Grid Background="#20000000">
            <!-- Semi-transparent background -->
            <Image gif:ImageBehavior.AnimatedSource="pack://application:,,,/Images/kanye-west-wtf.gif"
                   gif:ImageBehavior.AnimationCompleted="EndGameStarted_AnimationCompleted"
                   gif:ImageBehavior.RepeatBehavior="1x"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Stretch="None"
                   x:Name="ProvokeAnimationImage"/>
        </Grid>
    </Grid>
</Window>


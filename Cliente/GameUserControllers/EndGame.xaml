<UserControl x:Class="Cliente.GameUserControllers.EndGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="http://schemas.hpod9.com/haley/mvvm"
             mc:Ignorable="d"
             d:DesignHeight="750" d:DesignWidth="800" Height="750" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Final Scores" Foreground="Lime" HorizontalAlignment="Center"
               VerticalAlignment="Center" FontSize="50" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="{Binding Player1Username}" Foreground="Lime" VerticalAlignment="Center"
                   HorizontalAlignment="Center" />
            <Label Content="{Binding Player1Score}" Foreground="Lime" HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="{Binding Player2Username}" Foreground="Lime" VerticalAlignment="Center"
                   HorizontalAlignment="Center" />
            <Label Content="{Binding Player2Score}" Foreground="Lime" HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="{Binding Player3Username}" Foreground="Lime" VerticalAlignment="Center"
                   HorizontalAlignment="Center" />
            <Label Content="{Binding Player3Score}" Foreground="Lime" HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="{Binding Player4Username}" Foreground="Lime" VerticalAlignment="Center"
                   HorizontalAlignment="Center" />
            <Label Content="{Binding Player4Score}" Foreground="Lime" HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </StackPanel>

        <Button Grid.Row="5" Content="{h:Lang btnContinue}" Height="100" Width="250" Click="btContinue_Click" />
    </Grid>
</UserControl>
<Window x:Class="Cliente.GameUserControllers.ProvokeAnimationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="ProvokeAnimationWindow" Height="350" Width="525"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid>
        <Grid Background="#20000000">
            <!-- Semi-transparent background -->
            <Image gif:ImageBehavior.AnimatedSource="pack://application:,,,/Images/GameImages/ash-baby.gif"
                   gif:ImageBehavior.AnimationCompleted="ProvokeAnimationImage_AnimationCompleted"
                   gif:ImageBehavior.RepeatBehavior="1x"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Stretch="None" />
        </Grid>
    </Grid>
</Window>
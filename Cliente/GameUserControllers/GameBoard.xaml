<UserControl x:Class="Cliente.GameUserControllers.GameBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Cliente.GameUserControllers"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid MinHeight="1080" MinWidth="1920"  MaxHeight="1080" MaxWidth="1920">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
        <RowDefinition Height="10*"/>
        <RowDefinition Height="18*"/>
        <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Grid.Background >
            <ImageBrush ImageSource="/Images/GameImages/GameBoard.png"/>
        </Grid.Background>
        <Button Grid.Column="1" Grid.Row="1" Content="TESTBUTTONTODRAWCARD" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Center" Height="382" Width="241" RenderTransformOrigin="0.621,-1.202" Click="DrawThisFuckingCard"/>
        <Label x:Name="PrintCardDrawnID" Content="{Binding LastCardDrawn}" HorizontalAlignment="Center" Margin="0,880,0,0" VerticalAlignment="Top"/>

        <Image x:Name="imgPlayer1Cards" Grid.Row="2" Grid.Column="1" Height="175" Width="160" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50 0 0 25" MouseDown="imgPlayer1Cards_MouseDown"/>
        <Image x:Name="imgPlayer1Monster" Grid.Row="2" Grid.Column="1" Height="175" Width="160" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="250 0 0 25" MouseDown="imgPlayer1Monster_MouseDown"/>
        <ContentControl Grid.Row="2" Grid.Column="1" x:Name="extensiblePanelContentControl" HorizontalAlignment="Right" Width="600" Height="300" />
    </Grid>
</UserControl>

<UserControl x:Class="Cliente.GameUserControllers.GameBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Cliente.GameUserControllers"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid MinHeight="1080" MinWidth="1920"  MaxHeight="1080" MaxWidth="1920">
        <Grid.Background >
            <ImageBrush ImageSource="/Images/GameImages/GameBoard.png"/>
        </Grid.Background>
        <Button Content="TESTBUTTONTODRAWCARD" HorizontalAlignment="Left" Margin="402,0,0,0" VerticalAlignment="Center" Height="382" Width="241" RenderTransformOrigin="0.621,-1.202" Click="DrawThisFuckingCard"/>
        <Label x:Name="PrintCardDrawnID" Content="{Binding LastCardDrawn}" HorizontalAlignment="Center" Margin="0,880,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>

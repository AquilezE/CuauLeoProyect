<UserControl x:Class="Cliente.GameUserControllers.GameBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Cliente.GameUserControllers"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid MinHeight="1080" MinWidth="1920"  MaxHeight="1080" MaxWidth="1920">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Grid.Background >
            <ImageBrush ImageSource="/Images/GameImages/GameBoard.png"/>
        </Grid.Background>
        <Button Grid.Column="1" Grid.Row="1" Content="TESTBUTTONTODRAWCARD" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Center" Height="382" Width="241" RenderTransformOrigin="0.621,-1.202" Click="DrawCard"/>
        <Label x:Name="PrintCardDrawnID" Content="{Binding LastCardDrawn}" HorizontalAlignment="Center" Margin="0,880,0,0" VerticalAlignment="Top"/>

        <Image x:Name="imgPlayer1Cards" Grid.Row="2" Grid.Column="1" Height="175" Width="160" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50 0 0 25" MouseDown="imgPlayer1Cards_MouseDown"/>
        <Image x:Name="imgPlayer1Monster" Grid.Row="2" Grid.Column="1" Height="175" Width="160" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="250 0 0 25" MouseDown="imgPlayer1Monster_MouseDown"/>
        <ContentControl Grid.Row="1" Grid.Column="1" x:Name="extensiblePanelContentControl" HorizontalAlignment="Right" Width="600" Height="300" Grid.ColumnSpan="2" Margin="0,496,349,0" Grid.RowSpan="2" />

        <Image x:Name="imgBabieLando" Source="{Binding BabyDeck[0].CardPath}"  Grid.Row="1" Grid.Column="1" Height="379" Width="243" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="365,65,0,0" MouseDown="imgBabieLando_MouseDown"/>
        <Image x:Name="imgBabieWata" Source="{Binding BabyDeck[1].CardPath}" Grid.Row="1" Grid.Column="1" Height="366" Width="246" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="645,0,0,79" MouseDown="imgBabieWata_MouseDown"/>
        <Image x:Name="imgBabieAir" Source="{Binding BabyDeck[2].CardPath}" Grid.Row="1" Grid.Column="1" Height="367" Width="249" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="922,0,0,79" MouseDown="imgBabieAir_MouseDown"/>


    </Grid>
</UserControl>
